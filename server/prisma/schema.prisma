generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//Enums
enum ERole {
  ADMIN
  STREAMER
  USER
}

enum EStatus {
  Created
  Completed
  Succeeded
  Failed
}

type TData {
  type  String
  value Int?
}

type TMetadata {
  type  String
  value String
}

type TItem {
  type  String
  value String
}

model Player {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  auth      String      @unique
  country   String?     @default("PL")
  conn      String
  roomState RoomState[]

  @@map("players")
}

type TStatistics {
  goals    Int    @default(0)
  owngoals Int    @default(0)
  wins     Int    @default(0)
  defeats  Int    @default(0)
  draws    Int    @default(0)
  assists  Int    @default(0)
  points   Int    @default(0)
  coins    Int    @default(0)
  games    Int    @default(0)
  rank     String @default("ðŸ’© Stolec")
}

model RoomState {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  player     Player      @relation(fields: [playerId], references: [id])
  playerId   String      @db.ObjectId
  room       String
  role       ERole?      @default(USER)
  auth       String
  statistics TStatistics
  items      TItem[]

  @@unique([auth, room])
  @@map("roomStates")
}

model Item {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  stripeItemId String
  price        Float
  type         String
  img          String
  data         TData
  Order        Order[]

  @@map("items")
}

model Order {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  status EStatus
  code   String
  Item   Item    @relation(fields: [itemId], references: [id])
  itemId String  @db.ObjectId

  metadata TMetadata

  @@unique([code])
  @@map("orders")
}
